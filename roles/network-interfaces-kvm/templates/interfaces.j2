# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

#source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

# Static IP address
auto br0
iface br0 inet static
        address {{interface_address}}
        netmask {{interface_netmask}}
        network {{interface_network}}
        broadcast {{interface_broadcast}}
        gateway {{interface_gateway}}
        dns-search {{interface_dns_search}}
        dns-nameservers {% for dns in interface_dns_nameservers %} {{dns}} {% endfor %}
        bridge_ports {{interface_bridge_ports}}  # replace {{interface_bridge_ports}} with your actual interface name
        bridge_stp off       # disable Spanning Tree Protocol
        bridge_waitport 0    # no delay before a port becomes available
        bridge_fd 0          # no forwarding delay