      Type string : banheiro_thermostat_heatingCoolingMode_channel          [ stateTopic="banheiro/thermostat/state", transformationPattern="JSONPATH:$.device.status.heatingCoolingMode", commandTopic="banheiro/thermostat/setHeatingCoolingMode", allowedStates="OFF,AUTO,HEAT,COOL" ]
      Type number : banheiro_thermostat_targetTemperature_channel           [ stateTopic="banheiro/thermostat/state", transformationPattern="JSONPATH:$.device.status.targetTemperature", commandTopic="banheiro/thermostat/setTargetTemperature" ]
