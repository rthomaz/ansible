Bridge mqtt:broker:thermostat_connection [ host="192.168.1.22", secure=false, username="openhabian", password=""] {
 
  Thing topic quarto_thermostat_topic "Thermostat (Quarto)" @ "Thermostat" {
    Channels:
      Type string : quarto_thermostat_heatingCoolingMode_channel            [ stateTopic="quarto/thermostat/state", transformationPattern="JSONPATH:$.device.status.heatingCoolingMode", commandTopic="quarto/thermostat/setHeatingCoolingMode", allowedStates="OFF,AUTO,HEAT,COOL" ]
      Type number : quarto_thermostat_targetTemperature_channel             [ stateTopic="quarto/thermostat/state", transformationPattern="JSONPATH:$.device.status.targetTemperature", commandTopic="quarto/thermostat/setTargetTemperature" ]
  }

  Thing topic sala_thermostat_topic "Thermostat (Sala)" @ "Thermostat" {
    Channels:
      Type string : sala_thermostat_heatingCoolingMode_channel              [ stateTopic="sala/thermostat/state", transformationPattern="JSONPATH:$.device.status.heatingCoolingMode", commandTopic="sala/thermostat/setHeatingCoolingMode", allowedStates="OFF,AUTO,HEAT,COOL" ]
      Type number : sala_thermostat_targetTemperature_channel               [ stateTopic="sala/thermostat/state", transformationPattern="JSONPATH:$.device.status.targetTemperature", commandTopic="sala/thermostat/setTargetTemperature" ]
  }

  Thing topic banheiro_thermostat_topic "Thermostat (Banheiro)" @ "Thermostat" {
