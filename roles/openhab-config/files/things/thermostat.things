      Type string : escritorio_thermostat_heatingCoolingMode_channel        [ stateTopic="escritorio/thermostat/state", transformationPattern="JSONPATH:$.device.status.heatingCoolingMode", commandTopic="escritorio/thermostat/setHeatingCoolingMode", allowedStates="OFF,AUTO,HEAT,COOL" ]
