      Type string : cozinha_thermostat_heatingCoolingMode_channel           [ stateTopic="cozinha/thermostat/state", transformationPattern="JSONPATH:$.device.status.heatingCoolingMode", commandTopic="cozinha/thermostat/setHeatingCoolingMode", allowedStates="OFF,AUTO,HEAT,COOL" ]
      Type number : cozinha_thermostat_targetTemperature_channel            [ stateTopic="cozinha/thermostat/state", transformationPattern="JSONPATH:$.device.status.targetTemperature", commandTopic="cozinha/thermostat/setTargetTemperature" ]
  }

  Thing topic escritorio_thermostat_topic "Thermostat (Escrit√≥rio)" @ "Thermostat" {
