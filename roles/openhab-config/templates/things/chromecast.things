{% for i in chromecast_assistant%}
Thing chromecast:chromecast:{{i.name}}_chromecast_assistant_channel        "Assistente {{i.title}}"              @ "Chromecast"     [ ipAddress="{{i.ipAddress}}", port={{i.port}} ]
{% endfor %}

{% for i in chromecast_chromecast%}
Thing chromecast:chromecast:{{i.name}}_chromecast_chromecast_channel       "Chromecast {{i.title}}"              @ "Chromecast"     [ ipAddress="{{i.ipAddress}}", port={{i.port}} ]
{% endfor %}

