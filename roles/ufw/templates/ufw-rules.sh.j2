#!/bin/bash

# {{ workgroup_name }} Rules

# disable firewall
ufw disable

# reset all firewall rules
ufw reset --force

# enable logging
ufw logging on

# set default rules: deny all incoming traffic, allow all outgoing traffic
ufw default deny incoming
ufw default allow outgoing

# -------------------------------------
#  StartMyRules

# open ports for DNS
ufw allow from {{interface_network_prefix}} to any port 53

# open ports for SSH
ufw allow from {{interface_network_prefix}} to any port 22 proto tcp

#  EndMyRules
# -------------------------------------

# -------------------------------------
#  re-start

# enable firewall
ufw enable

# list all firewall rules
ufw status verbose
